<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Poppins Font Styles (using system fonts) -->
    <style name="PoppinsHeadline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="PoppinsTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="PoppinsSubtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Roboto Font Styles (using system fonts) -->
    <style name="RobotoHeadline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RobotoTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RobotoSubtitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="RobotoBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RobotoCaption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>
